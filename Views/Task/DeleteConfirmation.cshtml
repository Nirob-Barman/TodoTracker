@model TaskModel
@{
    ViewBag.Title = "Confirm Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Confirm Delete</h2>

<div class="alert alert-warning">
    <p>Are you sure you want to delete the task <strong>@Model.TaskTitle</strong>?</p>
</div>

<div class="mb-3">
    <p><strong>Description:</strong> @Model.TaskDescription</p>
    <p><strong>Assigned:</strong> @Model.TaskAssignDate.ToShortDateString()</p>
    <p>
        <strong>Categories:</strong>
        @foreach (var category in Model.Categories!)
        {
            <span class="badge bg-secondary me-1">@category.CategoryName</span>
        }
    </p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("Index", "Task")" class="btn btn-secondary">Cancel</a>
</form>
