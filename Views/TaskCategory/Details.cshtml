@model TodoTracker.Models.TaskCategory
@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-4">
    <div class="card shadow-sm border-info">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">📂 Category Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Category Name:</dt>
                <dd class="col-sm-9">@Model.CategoryName</dd>

                @if (Model.Tasks != null && Model.Tasks.Any())
                {
                    <dt class="col-sm-3">Associated Tasks:</dt>
                    <dd class="col-sm-9">
                        <ul class="list-group">
                            @foreach (var task in Model.Tasks)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @task.TaskTitle
                                    @* <span class="badge bg-@(task.IsCompleted ? "success" : "warning")"> *@
                                    @*     @(task.IsCompleted ? "Completed" : "Pending") *@
                                    @* </span> *@
                                </li>
                            }
                        </ul>
                    </dd>
                }
                else
                {
                    <dt class="col-sm-3">Associated Tasks:</dt>
                    <dd class="col-sm-9 text-muted">No tasks available for this category.</dd>
                }
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary">⬅ Back to List</a>
        </div>
    </div>
</div>
