@model TodoTracker.Models.TaskCategory

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-4">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4>⚠️ Confirm Deletion</h4>
        </div>
        <div class="card-body">
            <p class="mb-3">
                Are you sure you want to delete the following category? This action cannot be undone.
            </p>
            <dl class="row">
                <dt class="col-sm-4">Category Name:</dt>
                <dd class="col-sm-8">@Model.CategoryName</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete" method="post" class="mb-0">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">🗑️ Yes, Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</div>
