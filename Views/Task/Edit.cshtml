@model TodoTracker.ViewModels.TaskViewModel
@{
    ViewBag.Title = "Edit Task";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Task</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="mb-3">
        @Html.LabelFor(m => m.TaskTitle)
        @Html.TextBoxFor(m => m.TaskTitle, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.TaskDescription)
        @Html.TextAreaFor(m => m.TaskDescription, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.TaskAssignDate)
        @* @Html.TextBoxFor(m => m.TaskAssignDate, new { @class = "form-control", type = "date" }) *@
        @Html.TextBoxFor(m => m.TaskAssignDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.IsCompleted)
        @Html.CheckBoxFor(m => m.IsCompleted)
    </div>

    <div class="mb-3">
        <label>Categories</label>
        @foreach (var category in Model.AvailableCategories!)
        {
            var isChecked = Model.SelectedCategoryIds!.Contains(category.Id);
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedCategoryIds" value="@category.Id" @(isChecked ? "checked" : "") />
                <label class="form-check-label">@category.CategoryName</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success">Update</button>
}
