@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center mt-5">
    <h1 class="display-4 fw-bold text-primary">Welcome to TodoTracker</h1>
    <p class="lead">Organize your tasks, assign categories, and stay productive!</p>

    <div class="d-flex justify-content-center gap-3 mt-4">
        <a class="btn btn-lg btn-success" href="@Url.Action("Create", "Task")">
            ➕ Add New Task
        </a>
        <a class="btn btn-lg btn-outline-primary" href="@Url.Action("Index", "Task")">
            📋 View All Tasks
        </a>
    </div>

    <hr class="my-5" style="max-width: 600px; margin-inline: auto;" />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-info shadow-sm">
                <h5 class="fw-semibold">💡 How It Works</h5>
                <ul class="mb-0">
                    <li>Create and manage tasks with due dates and descriptions.</li>
                    <li>Assign one or more categories to organize your work.</li>
                    <li>Mark tasks as completed when you're done.</li>
                    <li>Edit or delete tasks anytime.</li>
                </ul>
            </div>
        </div>
    </div>
</div>
